# Default POSIX Makevars: C only. No OpenMP. No C++20.
PKG_CFLAGS   =
PKG_CPPFLAGS =
PKG_LIBS     =

# OpenMP toggle
ifeq ($(USE_OPENMP),1)
  PKG_CFLAGS   += $(SHLIB_OPENMP_CFLAGS) -DENABLE_OPENMP
  PKG_CPPFLAGS += $(SHLIB_OPENMP_CFLAGS) -DENABLE_OPENMP
  PKG_LIBS     += $(SHLIB_OPENMP_CFLAGS)
endif

# C++20 toggle
ifeq ($(USE_CPP20),1)
  CXX_STD = CXX20
  PKG_CPPFLAGS += -DENABLE_CPP20
endif
